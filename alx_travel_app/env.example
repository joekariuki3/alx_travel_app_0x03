# Which environment to load (development, testing, production)
ENVIRONMENT=development

# -----------------------------
# Development configuration
# -----------------------------
DEVELOPMENT_SECRET_KEY=replace-this-with-a-dev-only-secret-key
DEVELOPMENT_DEBUG=True
# Comma-separated list
DEVELOPMENT_ALLOWED_HOSTS=localhost,127.0.0.1

# MySQL Database (development)
DEVELOPMENT_DATABASE_NAME=dev_db_name
DEVELOPMENT_DATABASE_HOST=127.0.0.1
DEVELOPMENT_DATABASE_USER=dev_db_user
DEVELOPMENT_DATABASE_PASSWORD=dev_db_password
DEVELOPMENT_DATABASE_PORT=3306

# RabbitMQ (development)
DEVELOPMENT_RABBITMQ_USERNAME=guest
DEVELOPMENT_RABBITMQ_PASSWORD=guest
DEVELOPMENT_RABBITMQ_HOST=127.0.0.1
DEVELOPMENT_RABBITMQ_PORT=5672

# Celery (development)
# Use 'django-db' to store results in the Django DB via django_celery_results
DEVELOPMENT_CELERY_RESULT_BACKEND=django-db
DEVELOPMENT_CELERY_RESULT_EXTENDED=True


# -----------------------------
# Testing configuration
# -----------------------------
TESTING_SECRET_KEY=replace-this-with-a-testing-secret-key
TESTING_DEBUG=False
TESTING_ALLOWED_HOSTS=localhost

# MySQL Database (testing)
TESTING_DATABASE_NAME=test_db_name
TESTING_DATABASE_HOST=127.0.0.1
TESTING_DATABASE_USER=test_db_user
TESTING_DATABASE_PASSWORD=test_db_password
TESTING_DATABASE_PORT=3306

# RabbitMQ (testing)
TESTING_RABBITMQ_USERNAME=guest
TESTING_RABBITMQ_PASSWORD=guest
TESTING_RABBITMQ_HOST=127.0.0.1
TESTING_RABBITMQ_PORT=5672

# Celery (testing)
TESTING_CELERY_RESULT_BACKEND=django-db
TESTING_CELERY_RESULT_EXTENDED=True


# -----------------------------
# Production configuration
# -----------------------------
PRODUCTION_SECRET_KEY=change-this-to-a-strong-unique-production-secret-key
PRODUCTION_DEBUG=False
# Replace with your real domains or IPs
PRODUCTION_ALLOWED_HOSTS=example.com,www.example.com

# MySQL Database (production)
PRODUCTION_DATABASE_NAME=prod_db_name
PRODUCTION_DATABASE_HOST=prod-db-host
PRODUCTION_DATABASE_USER=prod_db_user
PRODUCTION_DATABASE_PASSWORD=prod_db_password
PRODUCTION_DATABASE_PORT=3306

# RabbitMQ (production)
PRODUCTION_RABBITMQ_USERNAME=prod_rabbit_user
PRODUCTION_RABBITMQ_PASSWORD=prod_rabbit_password
PRODUCTION_RABBITMQ_HOST=prod-rabbit-host
PRODUCTION_RABBITMQ_PORT=5672

# Celery (production)
# Consider a durable backend like redis or a database you manage
# Example: redis://:password@host:6379/0
PRODUCTION_CELERY_RESULT_BACKEND=django-db
PRODUCTION_CELERY_RESULT_EXTENDED=True